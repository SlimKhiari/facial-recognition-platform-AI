<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <servlet>
    <servlet-name>Etudiant</servlet-name>
    <servlet-class>com.octest.servlets.Etudiant</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Etudiant</servlet-name>
    <url-pattern>/Etudiant</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Acceuil</servlet-name>
    <servlet-class>com.octest.servlets.Acceuil</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Acceuil</servlet-name>
    <url-pattern>/Acceuil</url-pattern>
  </servlet-mapping>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <include-prelude>/WEB-INF/Entete.jsp</include-prelude>
    </jsp-property-group>
  </jsp-config>
  <servlet>
    <servlet-name>visiteur</servlet-name>
    <servlet-class>com.octest.servlets.visiteur</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>visiteur</servlet-name>
    <url-pattern>/visiteur</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <display-name>login</display-name>
    <servlet-name>login</servlet-name>
    <servlet-class>com.octest.servlets.login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
</web-app>